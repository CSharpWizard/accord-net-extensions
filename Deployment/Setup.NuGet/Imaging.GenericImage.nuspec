<?xml version="1.0"?>

<package xmlns="http://schemas.microsoft.com/packaging/2010/07/nuspec.xsd">
  <metadata>
    <id>Accord.Extensions.Imaging.GenericImage</id>
    <version>$version$</version>
    <title>Accord Extensions Generic Image</title>
    <authors>Accord.NET Extensions</authors>
    <owners>Accord.NET Extensions</owners>
    <licenseUrl>http://accord.googlecode.com/svn/docs/License.txt</licenseUrl>
    <projectUrl>http://accord.googlecode.com</projectUrl>
    <iconUrl>http://accord.googlecode.com/svn/docs/resources/Accord.NET%20(logo%20small).png</iconUrl>
    <requireLicenseAcceptance>true</requireLicenseAcceptance>
    <description>
      Implements slim generic image class and basic extensions (arithmetics). Provides multiple color spaces and conversions between them.
      To get compatibility for other image types install appropriate extension NuGet package (e.g. Imaging.BitmapInterop).
    </description>
    <summary>Interoperability extensions between Accord.Extensions and AForge image format.</summary>
    <tags>accord.net framework extensions imaging generic-image color-spaces</tags>

    <dependencies>
      <dependency id="AForge"                                          version="2.2.5" />
      
      <dependency id="Accord.Extensions.Core"                          version="$version$" />
      <dependency id="Accord.Extensions.Math"                          version="$version$" />
    </dependencies>
  </metadata>
  
  <files>
    <file src="..\..\bin\Release\Accord.Extensions.Imaging.GenericImage.dll" target="lib\Accord.Extensions.Imaging.GenericImage.dll" />
    <file src="..\..\bin\Release\Accord.Extensions.Imaging.GenericImage.xml" target="lib\Accord.Extensions.Imaging.GenericImage.xml" />
  </files>
</package>